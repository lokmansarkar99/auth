<%- include('partials/header', { title: 'About' }) %>

<style>
  .about-section {
    flex: 1;
    padding: 4rem 2rem;
    background: var(--background);
  }

  .about-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .about-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .about-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .about-content {
    display: grid;
    gap: 2rem;
  }

  .info-card {
    background: var(--surface);
    padding: 2.5rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
  }

  .info-card:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--primary-color);
  }

  .info-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .info-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }

  .info-card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .info-card-body {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .tech-badge {
    padding: 0.5rem 1rem;
    background: rgba(99, 102, 241, 0.1);
    color: var(--primary-color);
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
    border: 1px solid rgba(99, 102, 241, 0.2);
  }

  @media (max-width: 768px) {
    .about-section {
      padding: 3rem 1.5rem;
    }

    .about-title {
      font-size: 2.25rem;
    }

    .about-subtitle {
      font-size: 1.1rem;
    }

    .info-card {
      padding: 2rem 1.5rem;
    }

    .info-card-title {
      font-size: 1.25rem;
    }

    .info-card-body {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .about-section {
      padding: 2rem 1rem;
    }

    .about-title {
      font-size: 1.875rem;
    }

    .info-card {
      padding: 1.5rem;
    }

    .tech-stack {
      gap: 0.5rem;
    }
  }
</style>

<div class="about-section">
